{
    "manifest_version": 3,
    "name": "ApplyAI",
    "version": "0.1.0",
    "description": "Connect ApplyAI to your account.",
    "action": {
        "default_title": "ApplyAI",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:3000/extension/connect*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "http://localhost:8000/*"
    ]
}